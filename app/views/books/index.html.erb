<h2>Books</h2>

<% @books.each do |book| %>
<table>
  <tr class="table-title">
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </tr>
  <tr>
    <td>
      <%= book.title %>
    </td>
    <td>
      <%= book.body %>
    </td>
    <td>
      <a href="/books/show">Show</a>
    </td>
    <td>
      <a href="/books/edit">Edit</a>
    </td>
    <td>
      <!--deleteメソッド-->
    <%= link_to "delete", book, method: :delete, data: { confirm: "本当に削除してもよろしいですか？" } %>
    </td>
  </tr>
</table>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>