<body>

  <h1>Editing Book</h1>

  <% if @book.errors.any? %>
    <%= @book.errors.count %> errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div id="df">
    <%= form_with model: @book do |f| %>

    <div>
      <p>Title</p>
      <%= f.text_field :title, class: "fl" %>
    </div>

    <div>
      <p>Body</p>
      <%= f.text_area :body, class: "fl" %>
    </div>

    <%= f.submit ' Update Book ' %>

    <% end %>
  </div>

  <%= link_to "Show", book_path(@book.id) %> | <a href="/books">Back</a>

</body>